\newcommand{\lastupdated}{\begin{textblock}{60}(155,5)
	\color{date}\footnotesize
	Last Updated on \today
	\end{textblock}
}

% Redo maketitle
\renewcommand{\@maketitle}{
	\centering{
		\Huge\selectfont
		\@title
	} \\[5pt]
	\centering{
		\color{headings}
		\normalsize \@author}\\
		\scriptsize Published: \today\ | View latest online at \href{http://hawkmauk.github.io/resume/}{http://hawkmauk.github.io/resume/}
	\noindent\makebox[\linewidth]{\color{headings}\rule{\paperwidth}{0.4pt}}
	\vspace{-15pt}

}

% Headings command
\usepackage{titlesec}
\titlespacing{\section}{0pt}{0pt}{0pt} 
\titlespacing{\subsection}{0pt}{0pt}{0pt}
\titlespacing{\subsubsection}{0pt}{0pt}{0pt}

\titleformat{\section}{%
	\color{headings}\scshape\large\raggedright\uppercase}{}{0em}{}

% Subeadings command
\titleformat{\subsection}{%
	\color{subheadings}\raggedright\scshape\bf\normalsize}{}{0em}{}

\titleformat{\subsubsection}{%
	\color{headings}\raggedright\normalsize}{}{0em}{}

% Bullet Lists with fewer gaps command
\newenvironment{tightemize}{
	\vspace{-\topsep}\begin{itemize}\itemsep1pt \parskip0pt \parsep0pt}
	{\end{itemize}\vspace{-\topsep}
}

% redefine itemize
\let\olditemize=\itemize
\let\oldenditemize=\enditemize

\renewenvironment{itemize}%
	{\vspace{-\topsep} \olditemize \itemsep1pt \parskip0pt \parsep0pt}
	{\oldenditemize \vspace{-\topsep}}

% add space at end of section
\let\oldsection\section
\renewcommand\section[1]%
	{\vspace{12pt}\oldsection{#1}}

% modify how textit is displayed
\let\oldtextit\textit
\renewcommand\textit[1]%
	{\begingroup\color{headings}\oldtextit{#1}\endgroup}
